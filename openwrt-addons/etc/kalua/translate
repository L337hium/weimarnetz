	case "$context" in
		filename|html)
			_sanitizer do "$( _translate html2plain "$o" )" alphanum

		;;
		*)
			echo -n "$o"

		;;
	esac
}

_translate_html2plain()
{
	local in="$1"

	echo "$in" | sed -e 's/\&Uuml;/Ue/g' \
			-e 's/\&uuml;/ue/g'
}
