#!/bin/sh 

START=11 

boot()
{
    HARDWARE=$(grep ^machine /proc/cpuinfo | sed 's/.*: \(.*\)/\1/')

    if [ -z "$HARDWARE" ]; then
        logger -t set_hardware -p daemon.err "error: found no machine entry in /proc/cpuinfo"
        exit 1
    else
        echo "$HARDWARE" > /etc/HARDWARE
        if [ $? -eq 0 ]; then        
           logger -t set_hardware -p daemon.info "wrote $HARDWARE to /etc/HARDWARE"
        else 
           logger -t set_hardware -p daemon.info "error writing $HARDWARE to /etc/HARDWARE"
           exit 1
        fi
    fi 
}

