#!/bin/sh

# defaults for all:
OLSR_METRIC="etx_ffeth"
OLSR_SPEED="5"
DNSSERVER="8.8.8.8"
POP3_USERNAME=
POP3_PASSWORD=
SMS77_USERNAME=
SMS77_PASSWORD=
HTTPD_CREDENTIALS=	# can be a list e.g. "admin:pass123 foo:bar" (username/pass)

case "$INSTALLATION" in
	ffweimar)
		OLSR_METRIC="etx_ff"	# we should change as soon as possible to etx_ffeth
		IPSYSTEM="ffweimar"
		password_set "admin"

		contact()
		{
			case "$1" in location)  echo "Freifunk Weimar" ;;
					latlon)	echo "50.9749425174;11.3295217752" ;;
					mail)	echo "wlan-assistance@gmx.de" ;;
					name)	echo "WLAN-System" ;;
					phone)	echo "03643/544304" ;;
					neturl)	echo "http://wireless.subsignal.org" ;;
			esac
		}

		case "$PROFILE_MODE" in
			ap)
				TXPOWER=20
				CHANNEL=1
			;;
			adhoc)
				TXPOWER=20
				CHANNEL=5
				MCAST_RATE=1000
				BSSID="02:ca:ff:ee:ba:be"
			;;
		esac
	;;
	*)
		echo "Installation '$INSTALLATION' not defined - abort!"
		sleep 3
		exit 1
	;;
esac
