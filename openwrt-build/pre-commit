#!/bin/sh
# copy this file to .git/hooks and make it executable. for everything you commit from now on the version information will be written to the variables_fff+ file


unixtime=$(($( date +%s ) / 3600))
filename="openwrt-addons/etc/variables_fff+"

echo "FFF_PLUS_VERSION=\"$unixtime\"	# $( date +%d%b%Y-%H:%M )">$filename
echo "FFF_VERSION=\"2.0.0\"		# openWrt based">>$filename
